<ui>
	<panel columns="2">
		<NameAttribute />

		<group label="AWS_SECRETSMANAGER_SETTINGS_LABEL" span="2" columns="2" margin="0,0,0,7" fill="false">
			<!-- Credenciais -->
			<RadioGroupAttribute field="credentialType" label="AWS_SECRETSMANAGER_CREDENTIAL_TYPE_LABEL"
				displayName="AWS_SECRETSMANAGER_CREDENTIAL_TYPE_NAME" description="AWS_SECRETSMANAGER_CREDENTIAL_TYPE_DESCRIPTION"
				removeEnvWhenFieldDisabled="true">
				<choice value="local" label="AWS_SECRETSMANAGER_CREDENTIAL_TYPE_LOCAL_LABEL" />
				<panel margin="0,0,0,7" columns="2" span="2">
					<ReferenceSelector field="awsCredential" 
						selectableTypes="ApiKeyProfile" label="CHOOSE_AWS_CREDENTIAL_LABEL"
						title="CHOOSE_AWS_CREDENTIAL_DIALOG_TITLE" searches="AuthProfilesGroup,ApiKeyGroup,ApiKeyProviderProfile" />
				</panel>
				<choice value="file" label="AWS_SECRETSMANAGER_CREDENTIAL_TYPE_FILE_LABEL" />
				<panel margin="0,0,0,7" columns="2" span="2">
					<TextAttribute field="credentialsFilePath" label="AWS_SECRETSMANAGER_CREDENTIALS_FILE_PATH_LABEL"
						displayName="AWS_SECRETSMANAGER_CREDENTIALS_FILE_PATH_NAME" description="AWS_SECRETSMANAGER_CREDENTIALS_FILE_PATH_DESCRIPTION" />
				</panel>
				<choice value="iam" label="AWS_SECRETSMANAGER_CREDENTIAL_TYPE_IAM_LABEL" />
			</RadioGroupAttribute>

			<ComboAttribute field="secretRegion" label="AWS_SECRETSMANAGER_REGION_LABEL"
				displayName="AWS_SECRETSMANAGER_REGION_NAME" description="AWS_SECRETSMANAGER_REGION_DESCRIPTION" 
				contentSource="com.vordel.circuit.aws.RegionUtils.regions"
				required="true" stretch="true" />

			<ReferenceSelector field="clientConfiguration" required="true"
				selectableTypes="AWSClientConfiguration" label="AWS_CLIENT_CONFIGURATION"
				title="AWS_CLIENT_CONFIGURATION_DIALOG_TITLE" searches="AWSSettings" />
		</group>

		<tabFolder span="2">
			<tab label="AWS_SECRETSMANAGER_TAB_SETTINGS_LABEL">
				<panel columns="2">
					<TextAttribute field="secretName" label="AWS_SECRETSMANAGER_SECRET_NAME_LABEL"
						displayName="AWS_SECRETSMANAGER_SECRET_NAME" description="AWS_SECRETSMANAGER_SECRET_NAME_DESCRIPTION" 
						required="true" />
				</panel>
			</tab>
			<tab label="AWS_SECRETSMANAGER_TAB_ADVANCED_LABEL">
				<panel columns="2">
					<TextAttribute field="maxRetries" label="AWS_SECRETSMANAGER_MAX_RETRIES_LABEL"
						displayName="AWS_SECRETSMANAGER_MAX_RETRIES_NAME" description="AWS_SECRETSMANAGER_MAX_RETRIES_DESCRIPTION" />
					<TextAttribute field="retryDelay" label="AWS_SECRETSMANAGER_RETRY_DELAY_LABEL"
						displayName="AWS_SECRETSMANAGER_RETRY_DELAY_NAME" description="AWS_SECRETSMANAGER_RETRY_DELAY_DESCRIPTION" />
				</panel>
			</tab>
		</tabFolder>
	</panel>
</ui> 